{
  "include": [
    "./src/**/*",
    "gatsby-config.ts",
    "src/gatsby-node.ts",
    "src/create-pages.ts",
    "gatsby-node.ts",
    "create-pages.ts"
  ],
  "exclude": [
    "./node_modules",
    "./public",
    "./.cache",
    "./gatsby-config.ts",
    "./gatsby-node.ts",
    "./gatsby-browser.ts",
    "./gatsby-ssr.ts",
    "./gatsby-config.js"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    // "strict": true, // TODO - ERY: turning this off for now since our matchbox components don't have typescript.
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  }
}
