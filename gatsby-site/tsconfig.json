{
  "include": ["./src/**/*", "./ts-configs/**/*"],
  "exclude": ["./node_modules", "./public", "./.cache"],
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    // "strict": true, // TODO - ERY: turning this off for now since our matchbox components don't have typescript.
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node"]
  }
}
